                    #soporte-mensaje.form-group-soporte
                        input.form-control(type='textarea' style="WIDTH: 350px; HEIGHT: 120px", placeholder='Escriba su mensaje aquí' required)
                    .boton-enviar-soporte
                        button.btn.btn-sample(type='submit') Enviar

        
        include footer
    
