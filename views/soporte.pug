        include navbar

        .modal-dialog.text-center
            .modal-content.contenedor-soporte
                .col-12.soporte-img
                    img(src='/img/iconos/icono-soporte.png')
                form.col-12
                    #soporte-nombre.form-group-soporte
                        input.form-control(type='text' placeholder='Nombre completo' required)
